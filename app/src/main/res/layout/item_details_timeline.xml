<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:orientation="horizontal">

    <com.patrick.caracal.ui.view.TimelineView
        android:id="@+id/timeline"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        app:line="#e1e1e1"
        app:line_size="2dp"
        app:markerInCenter="false"
        app:marker="@drawable/circel_marker_normal"
        app:marker_size="16dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:paddingLeft="10dp"
            android:textColor="#bbb"
            android:id="@+id/acceptStation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="客户 签收人 : 快递箱 已签收 感谢使用圆通速递，期待再次为您服务" />

        <TextView
            android:id="@+id/acceptTime"
            android:textColor="#bbb"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:paddingLeft="10dp"
            android:text="2016-04-01 03:21:36" />

        <View
            android:background="#e1e1e1"
            android:layout_marginTop="6dp"
            android:layout_marginLeft="10dp"
            android:layout_width="match_parent"
            android:layout_marginBottom="12dp"
            android:layout_height="0.5dp"/>
    </LinearLayout>
</LinearLayout>