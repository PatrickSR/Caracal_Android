<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/exp_code"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="1234567890"
            android:textSize="26sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/exp_company_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:lines="1"
            android:text="天天快递" />

        <TextView
            android:id="@+id/acceptStation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="快件由无锡集散陆运发往广州分拨中心,快件由无锡集散陆运发往广州分拨中心" />

        <FrameLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="24dp">
            <TextView
                android:id="@+id/acceptTime"
                android:gravity="start|center"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:lines="1"
                android:text="2016-08-01 23:38:28" />

            <ImageView
                android:id="@+id/company_type"
                android:src="@drawable/ic_domestic"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="right"
                android:gravity="center|start"/>
            <!--<TextView-->
                <!--android:id="@+id/company_type"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="match_parent"-->
                <!--android:drawableLeft="@drawable/ic_domestic"-->
                <!--android:layout_gravity="right"-->
                <!--android:gravity="center|start"-->
                <!--android:text=" 国内"-->
                <!--android:textColor="@color/color_domestic" />-->
        </FrameLayout>

    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="0.5dp"
        android:background="@color/divider" />

</RelativeLayout>